_("A demo of implementing a C-style for function")

_ do [
    c_for = _ function {
        id : .c_for,
        code : (.ctx : .args) : _ do [
            [.init, .condition, .next, .body] = .args,
            .ctx which _ apply _ do [
                .init,
                .condition loop [
                    .body,
                    .next,
                ],
            ],
        ],
    },
    .adapter@c_for export form, 
    _ c_for [[i = 1, sum = 0], i <= 10, i = i + 1, sum = sum + i],
    sum
]

_("A demo of implementing a C-style for function")

_ do [
    c_for = _ function {
        id : _c_for,
        code : (_ctx : _args) : _ do [
            [_init, _condition, _next, _body] = _args,
            _ctx which _ apply _ do [
                _init,
                _condition loop [
                    _body,
                    _next,
                ],
            ],
        ],
    },
    _adapter@c_for export data, 
    _ c_for [[i = 1, sum = 0], i <= 10, i = i + 1, sum = sum + i],
    sum
]

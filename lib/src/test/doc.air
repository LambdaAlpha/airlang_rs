"A demo of implementing a C-like for loop function" ! do ; [
    c_for = function ; {
        input_name : .args,
        context_name : .ctx,
        context_access : .mutable,
        call_mode : id,
        prelude : prelude .,
        body : do [
            [init, condition, next, body] = args,
            ctx | form ; do ; [
                .^init,
                .^condition while [
                    .^body,
                    .^next,
                ],
            ],
        ],
    },
    c_for [[i = 1, sum = 0], i <= 10, i = i + 1, sum = sum + i],
    sum
]

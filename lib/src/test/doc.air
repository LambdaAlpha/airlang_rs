_("A demo of implementing a C-like for function")

do ; [
    c_for = function ; {
        context_access : mutable,
        call_mode : id,
        call : (.ctx : .args) : do ; [
            [.init, .condition, .next, .body] = .args,
            .ctx | do ; [
                .init,
                .condition loop [
                    .body,
                    .next,
                ],
            ],
        ],
    },
    c_for [[i = 1, sum = 0], i <= 10, i = i + 1, sum = sum + i],
    sum
]
